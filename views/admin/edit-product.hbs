<section>
    <div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Prodcuts</h2>
            <form action="/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
                <label for="">Name</label>
                <input type="text" name="Name" value="{{product.Name}}" class="form-control">
                <label for="">Category</label>
                <input type="text" name="Category" value="{{product.Category}}" class="form-control">
                <label for="">Price</label>
                <input type="number"  value="{{product.Price}}" class="form-control">
                <label for="">Description</label>
                <input type="text" name="Description" value="{{product.Description}}" class="form-control">
                <label for="">Image</label>
                <img src="/product-images/{{product._id}}.jpg" style="width:100px;height:auto" id="imgView">
                <input type="file" name="Image" class="form-control" onchange="imageView(event)">
                <button type="submit" class="btn btn-success mt-4">Submit</button>    
            </form>
        </div>
    </div>
    </div>
</section>

<script>
    function imageView(event){
        document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
    }
</script>