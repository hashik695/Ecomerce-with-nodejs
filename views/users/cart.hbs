<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <td scope="col">Item</td>
                    <td scope="col">Title</td>
                    <td scope="col">Quantity</td>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
            
                    <td><img style="width: 70px;height:70px" src="/product-images/{{this.product._id}}.jpg"></td>
                    <td>{{this.product.Name}}</td>
                    
                    <td><button class="cart-item-count btn btn-warning mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>{{this.quantity}}<button class="cart-item-count btn btn-danger ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button></td>
                    <td>
                        <a href="" class="btn btn-primary">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count){
    $.ajax({
        url:'/cart-product-quantity',
        data:{
            cart:cartId,
            product:proId,
            count:count
        },
        method:'post',
        success:(response)=>{
            alert(response)
        }
    })
}
</script>